@model Person
@{
    ViewData["Title"] = "MyData";
}

<form asp-controller="Home" asp-action="_DataPartial" method="post">
    <fieldset>
        <legend>Create New Data Form</legend>

        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
        </div>

        <div>
            <label asp-for="Surname"></label>
            <input asp-for="Surname" />
        </div>

        <div>
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" />
        </div>

        <div>
            <label asp-for="Gender"></label>
            <input type="radio" asp-for="Gender" value="Чоловік" /> <label>Чоловік</label>
            <input type="radio" asp-for="Gender" value="Жінка" /> <label>Жінка</label>
        </div>

        <div>
            <label asp-for="City"></label>
            <select asp-for="City" asp-items="new SelectList(ViewBag.Cities)"></select>
        </div>

        <div>
            <label asp-for="Hobbies"></label>
            <select asp-for="Hobbies" asp-items="new MultiSelectList(ViewBag.Hobbies)"></select>
        </div>

        <div>
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" type="date" />
        </div>

        <br />

        <input type="submit" value="Надіслати" />
    </fieldset>
</form>
